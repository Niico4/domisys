---
import '@fontsource/inter/300.css';
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';
import '@fontsource/grandstander/700.css';
import '@/styles/global.css';
import Header from './Header.astro';
import Footer from './Footer.astro';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>DomiSys · Automatiza, Organiza y Entrega Más Rápido</title>
    <link rel="icon" type="image/svg+xml" href="/images/logo.webp" />
    <meta
      name="description"
      content="Convierte la gestión de pedidos en un proceso ágil y sin complicaciones con DomiSys. Organiza repartidores, optimiza entregas y haz crecer tu negocio con tecnología inteligente."
    />

    <meta name="og:url" content="https://domisys-landing.vercel.app/" />
    <meta name="og:type" content="website" />
    <meta
      name="og:title"
      content="DomiSys · Automatiza, Organiza y Entrega Más Rápido"
    />
    <meta
      name="og:description"
      content="DomiSys te da el control total de tus pedidos y repartidores. Automatiza, simplifica y entrega más rápido. ¡Lleva tu negocio al siguiente nivel con un solo clic!"
    />
    <meta
      name="og:image"
      content="https://domisys-landing.vercel.app/images/hero.webp"
    />
    <meta property="og:site_name" content="DomiSys" />
    <meta name="og:locale" content="es_ES" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@domisys" />
    <meta name="twitter:creator" content="@niico4_" />
    <meta
      name="twitter:title"
      content="DomiSys · Automatiza, Organiza y Entrega Más Rápido"
    />
    <meta
      name="twitter:description"
      content="¿Tu negocio depende de entregas rápidas? DomiSys te ayuda a organizarlas sin esfuerzo. Más control, más velocidad, menos estrés."
    />
    <meta
      name="twitter:image"
      content="https://domisys-landing.vercel.app/images/hero.webp"
    />
  </head>
  <body>
    <Header />
    <main class="my-10 lg:my-10">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
    font-family: 'Inter', sans-serif;
    color: var(--color-gray);

    background-color: #121620;
    background-image: radial-gradient(
        circle at top,
        rgba(107, 107, 107, 0.18) 0%,
        #1a1a1a 50%,
        #050505 100%
      ),
      linear-gradient(to right, rgba(79, 79, 79, 0.3) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(79, 79, 79, 0.3) 1px, transparent 1px),
      radial-gradient(
        ellipse 60% 50% at 50% 0%,
        rgba(255, 255, 255, 0.06) 10%,
        transparent 80%
      );
    background-size:
      cover,
      14px 24px,
      14px 24px,
      cover;
    background-blend-mode: overlay;
    background-attachment: fixed;
  }
</style>
