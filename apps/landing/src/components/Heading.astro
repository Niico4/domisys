---
interface Props {
  label: string;
  title: string;
  description: string;
}

const { title, description, label } = Astro.props;
---

<div class="flex flex-col items-start lg:items-center gap-4 mx-auto">
  <span
    class="badge badge-primary text-xs rounded-full bg-brand-secondary/15 text-brand-secondary border-0"
  >
    {label}
  </span>

  <div class="flex flex-col items-start lg:items-center gap-3">
    <h2
      class="text-3xl md:text-[40px] font-bold bg-clip-text text-transparent bg-[linear-gradient(163deg,_rgba(160,206,216,1)_0%,_rgba(160,206,216,0.5)_70%)]"
    >
      {title}
    </h2>

    <p class="text-lg lg:text-center lg:text-balance w-full md:w-3/5">
      {description}
    </p>
  </div>
</div>
