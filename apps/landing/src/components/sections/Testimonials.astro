---
import { TESTIMONIALS_MOCK } from '@/constanst/testimonials';
---

<section
  id="testimonials"
  class="relative flex flex-col items-center w-full h-full py-14 px-4 space-y-12 overflow-hidden"
>
  <div class="relative w-full overflow-hidden">
    <div class="flex gap-6 animate-marquee w-[200%]">
      {
        TESTIMONIALS_MOCK.concat(TESTIMONIALS_MOCK).map(
          ({ img, name, role, text }, index) => (
            <div class="w-[350px] md:w-[500px] p-6 rounded-xl shadow-lg bg-white/[0.04] border border-white/5 backdrop-blur-md">
              <p class="text-lg md:text-xl text-gray/70">“{text}”</p>
              <div class="flex items-center gap-4 mt-4">
                <img
                  src={img}
                  alt={`Imagen del cliente ${index}`}
                  class="w-12 h-12 rounded-full"
                />
                <div>
                  <h4 class="font-semibold text-gray-light text-base">
                    {name}
                  </h4>
                  <p class="text-sm text-muted/80">{role}</p>
                </div>
              </div>
            </div>
          )
        )
      }
    </div>
  </div>

  <style>
    @keyframes marquee {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(-50%);
      }
    }

    .animate-marquee {
      display: flex;
      animation: marquee 20s linear infinite;
      width: max-content;
    }
  </style>
</section>
