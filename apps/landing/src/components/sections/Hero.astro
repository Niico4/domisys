---
import ChartLine from '@icons/chart-line.svg';
import ShoppingCart from '@icons/shopping-cart.svg';
import ArrowNarrowRight from '@icons/arrow-narrow-right.svg';
import ChevronDown from '@icons/chevron-down.svg';

const STATS_VALUES = [
  { value: '+500', text: 'Negocios activos' },
  { value: '+10k', text: 'Pedidos diarios' },
  { value: '99.9%', text: 'Disponibilidad' },
];
---

<section
  id="home"
  class="relative w-full h-screen mx-auto flex items-center overflow-hidden"
>
  <div
    class="w-11/12 md:w-4/5 mx-auto flex flex-col xl:flex-row gap-12 items-center"
  >
    <article class="xl:w-[60%] 2xl:w-[40%]">
      <h1
        class="max-sm:text-3xl text-4xl xl:text-4xl 2xl:text-5xl font-bold mb-6 text-pretty text-light"
      >
        Convierte tu tienda en un <span class="text-brand-primary"
          >e-commerce</span
        > con gestión de domicilios
      </h1>
      <p class="max-sm:text-base text-lg md:text-xl mb-8 text-pretty">
        DomiSys te permite vender online, gestionar inventario, asignar pedidos
        y hacer entregas con facilidad.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 mb-10">
        <button
          class="btn btn-primary group transform transition-all duration-300"
        >
          Solicitar demo
          <ArrowNarrowRight
            class="ml-2 group-hover:translate-x-1 transition-transform"
          />
        </button>

        <button class="btn btn-soft btn-primary transition-all duration-300">
          Ver video
        </button>
      </div>

      <div
        class="max-[360px]:grid-cols-1 grid grid-cols-2 md:flex gap-6 mt-8 opacity-90 hover:opacity-100 transition-opacity"
      >
        {
          STATS_VALUES.map(({ text, value }, index) => (
            <div
              class="surface-glass backdrop-blur-sm p-4 rounded-lg text-center transform hover:translate-y-[-5px] transition-transform"
              style={`${index === 2 && 'grid-column: 1 / -1'}`}
            >
              <div class="text-2xl font-bold text-brand-secondary">{value}</div>
              <div class="text-sm">{text}</div>
            </div>
          ))
        }
      </div>
    </article>

    <figure class="relative xl:w-[60%] max-xl:-order-1">
      <img
        src="/images/hero.webp"
        alt="Dashboard DomiSys"
        class="rounded-lg w-full h-full object-cover animate-fade-left"
      />

      <div
        class="absolute top-4 md:top-6 left-2 md:left-4 flex-center gap-2 p-2 text-xs md:text-sm -rotate-[9deg] md:scale-105 text-light rounded-lg bg-white/[0.06] backdrop-blur-sm animate-jump-in animate-duration-[400ms] animate-delay-700"
      >
        <ShoppingCart class="text-brand-primary size-[16px]" />
        <span>124 nuevos pedidos</span>
      </div>

      <div
        class="absolute bottom-2 right-2 md:bottom-6 md:right-6 flex-center gap-2 p-2 text-xs md:text-sm rounded-lg md:scale-105 text-light bg-white/[0.06] backdrop-blur-sm animate-jump-in animate-duration-[400ms] animate-delay-700"
      >
        <ChartLine class="text-brand-primary size-[16px]" />
        <span>Ventas +24%</span>
      </div>
    </figure>
  </div>

  <a
    href="#about"
    class="max-xl:hidden absolute bottom-20 left-1/2 transform -translate-x-1/2 group flex flex-col items-center text-gray/80"
    aria-label="Scroll down"
  >
    <span class="text-sm mb-2 group-hover:text-gray transition-all"
      >Descubre más</span
    >
    <ChevronDown class="animate-bounce group-hover:text-gray transition-all" />
  </a>
</section>
